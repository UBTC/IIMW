# i3 config file (v4)  ~/.config/i3/config or ~/.i3/config
#
# This file has been auto-generated by i3-config-wizard(1). (M.W. revised)
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

set $mod Mod4

# use I3 in the WMII way:
workspace_layout stacking

# Font for window titles (and for bar unless another font is set):
font pango:Ubuntu Mono Bold 10

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal

# kill focused window [q]
bindsym $mod+Shift+c kill

# start dmenu (a program launcher) [d]
bindsym $mod+x exec "dmenu_run -i -fn '-bitstream-*-*-*-*-*-16-*-*-*-*-*-*-*'"

# change focus [jkl;]
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window [jkl;]
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# change container layout (stacked, tabbed, toggle split) [s.e]
bindsym $mod+a layout stacking
bindsym $mod+s layout splitv

# enter fullscreen mode for the focused container [f]
bindsym $mod+d fullscreen

# toggle tiling / floating [S-space]
bindsym $mod+q floating toggle

# change focus between tiling / floating windows [space]
bindsym $mod+w focus mode_toggle

# focus the parent container [a]
bindsym $mod+p focus parent

# focus the child container [d]
bindsym $mod+o focus child

bindsym $mod+Tab focus down
bindsym $mod+Shift+Tab focus left

# switch ws
bindsym $mod+grave workspace next
bindsym $mod+Shift+grave workspace prev
bindsym $mod+comma workspace prev
bindsym $mod+period workspace next
bindsym $mod+Shift+comma move container to workspace prev; workspace prev
bindsym $mod+Shift+period move container to workspace next; workspace next
bindsym Mod1+Ctrl+Left workspace prev
bindsym Mod1+Ctrl+Right workspace next
bindsym Mod1+Ctrl+Shift+Left move container to workspace prev; workspace prev
bindsym Mod1+Ctrl+Shift+Right move container to workspace next; workspace next

# switch to workspace [mod-1..0]
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10

# move focused container to workspace [sm-1..0]
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+BackSpace exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# set resize mode [r]
bindsym $mod+z mode "resize"

# resize window (you can also use the mouse for that)
mode "resize" {
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize shrink height 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize shrink height 10 px or 10 ppt
        bindsym Up resize grow height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
}

# set launcher mode
bindsym $mod+e mode "launcher"

mode "launcher" {
    bindsym w exec google-chrome
    bindsym e exec emacs
    bindsym f exec dolphin
    bindsym t exec roxterm
    bindsym r exec evince

    bindsym Esc mode "default"
    bindsym Return mode "default"
}

# Assign application to workspace
#assign [class="Firefox"] 1
#assign [class="google-chrome"] 1
#assign [class="google-chrome-beta"] 1
#assign [class="Emacs"] 2
#assign [class="Gvim"] 2
#assign [class="Geany"] 2
#assign [class="Dolphin"] 3
#assign [class="Pcmanfm"] 3
#assign [class="Nautilus"] 3
#assign [class="Roxterm"] 4
#assign [class="Konsole"] 4
#assign [class="Gnome-terminal"] 4
#assign [class="Evince"] 5
#assign [class="Okular"] 5
#assign [class="JabRef"] 5

# summon most used apps
bindsym $mod+F1 [class="google-chrome-beta"] move workspace current
bindsym $mod+F2 [class="Emacs"] move workspace current
bindsym $mod+F3 [class="Dolphin"] move workspace current
bindsym $mod+F4 [class="Roxterm"] move workspace current
bindsym $mod+F5 [class="Evince"] move workspace current

# Volume control
bindsym $mod+F6 exec "amixer -D pulse sset Master 10%-"
bindsym $mod+F7 exec "amixer -D pulse sset Master  5%+"
bindsym $mod+F8 exec "pavucontrol"

# Screen brightness
bindsym $mod+F9  exec "xbacklight -10%"
bindsym $mod+F10 exec "xbacklight  +5%"

# Start i3bar to display a workspace bar (plus the information i3status finds)
bar {
    status_command i3status
}

# screen
bindsym $mod+Shift+Escape exec "i3lock"
bindsym $mod+Insert exec "scrot -e 'mv $f ~/screenshots/'"

# startup
exec "setxkbmap -option caps:swapescape"
exec "xrandr --output eDP1 --right-of DP2 --auto"
exec "xbacklight = 20"
exec "pactl set-sink-volume 0 '10%'"
exec "xsetroot -solid black -cursor_name left_ptr"
exec "xautolock -time 5 -locker i3lock -nowlocker i3lock"
exec "skype"
exec "keynav"
exec "megasync"
exec "nm-applet"
exec "xfce4-power-manager"
exec "mkdir -p ~/screenshots/"
exec "feh --bg-scale /home/mw/MEGAsync/Pictures/desktop/wallpaper.jpg"
exec "play /home/mw/MEGAsync/Music/login-sound/ubuntu11/desktop-login.ogg"
